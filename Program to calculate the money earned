#include <iostream>

using namespace std;



int main(void)

{

int n;

int total, rate= 20;

 

cout<<"Enter number of days worked: ";

cin>>n;

 

total = n * rate;

 

cout<<"\n----------------------------";

cout<<"\n| For USD20 per day |";

cout<<"\n----------------------------";

cout<<"\n";

cout<<"\nFor "<<n<<" days of work, you have earned USD ";

cout<<total<<endl;

 

return 0;

}
