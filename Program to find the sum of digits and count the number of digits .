// C program to compute sum of digits in
// number.
#include <iostream>
using namespace std;
 
/* Function to get sum of digits */
class gfg {
public:
    int getSum(int n)
    {
        int sum = 0;
        while (n != 0) {
            sum = sum + n % 10;
            n = n / 10;
        }
        return sum;
    }
};
 
// Driver code
int main()
{
    gfg g;
    int n = 687;
    cout << g.getSum(n);
    return 0;
}
// Iterative C++ program to count
// number of digits in a number
#include <bits/stdc++.h>

using namespace std;
 

int countDigit(long long n)
{

    int count = 0;

    while (n != 0) 

    {

        n = n / 10;

        ++count;

    }

    return count;
}
 
// Driver code

int main(void)
{

    long long n = 345289467;

    cout << "Number of digits : " << countDigit(n);

    return 0;
}
