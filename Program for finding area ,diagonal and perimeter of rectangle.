include<iostream>
#include<math.h>
using namespace std;

int main()

{

    int width,height,area, perimeter,diagonal;

    cout<<"Enter  Width of Rectangle = ";

    cin>>width;

    cout<<"Enter  Height of Rectangle = ";

    cin>>height;

    area=height*width;

    cout<<"Area of Rectangle ="<<area<<endl;

    perimeter=2*(height+width);

cout<<" Perimeter of rectangle are = "<<perimeter<<endl;
  diagonal= sqrt(pow(height,2)+pow(width,2));
  
  cout<<"diagonal of rectangle are ="<<diagonal<<endl;
return 0;

}
