#include<iostream.h> 
 #include<conio.h> 
 void main() 
 { 
               int sum, n, i ; 
               float av; 
               clrscr(); 
               cout<<"\n Enter the Value of N:"; 
               cin>>n; 
               sum=0; 
               i =1; 
          while(i<=n) 
             { 
                  sum= sum + i ;       
                  i = i + 1; 
             } 
                 cout<<"\n Sum is: "<<sum; 
                 av=(float) sum/n; 
                 cout<<"\n Average is :"<<av; 
                 getche(); 
 } 
 
